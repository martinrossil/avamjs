{
  "hosting": 
  {
    "public": "src",
    "ignore": 
    [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": 
    [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": 
    [ 
      {
        "source" : "/index.html",
        "headers" : 
        [ 
          {
            "key" : "Cache-Control",
            "value" : "public, max-age=300, s-maxage=300"
          } 
        ]
      }
      ,
      {
        "source" : "/manifest.json",
        "headers" : 
        [ 
          {
            "key" : "Cache-Control",
            "value" : "public, max-age=2592000, s-maxage=2592000"
          } 
        ]
      }
      ,
      {
        "source" : "**/*.@(mp4|webm|jpg|webp|png|ico)",
        "headers" : 
        [ 
          {
            "key" : "Cache-Control",
            "value" : "public, max-age=2592000, s-maxage=2592000"
          } 
        ]
      }
    ]
  }
}
